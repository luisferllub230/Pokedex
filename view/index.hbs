<div class="container-fluid">

  <div class="container">

    <div class="row">

      <div class="col-md-12">
        <h1 class="text-center">{{{title}}}</h1>
      </div>

      {{! show the pokemons }}
      {{#each pokemons as |pk key|}}
      <div class="col-12 col-md-3">
        <div class="card border-dark mb-3">
          <div class="card-header">
            <h1 class="fs-4">ID: {{pk.id}}</h1>
            </div>
          <div class="card-body">
            <h5 class="card-title">{{pk.pokemonName}}</h5>
            <img src="{{pk.image}}" alt="{{pk.pokemonName}}" class="card-img">
          </div>
          <div class="card-footer">
            <ul>
                <li>{{pk.typesT.dataValues.typeName}}</li>
                <li>{{pk.regionsT.dataValues.regionName}}</li>
            </ul>
          </div>
        </div>
      </div>
      {{/each}}

    </div>

  </div>
</div>

<form action="/" method="post">
<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="offcanvasWithBackdropLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasWithBackdropLabel">Offcanvas with backdrop</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
    <div class="offcanvas-body">
      {{#each regions as |rg key|}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="{{rg.id}}" id="{{rg.regionName}}{{rg.id}}" name="inputID">
        <label class="form-check-label" for="{{rg.regionName}}{{rg.id}}">
          {{rg.regionName}}
        </label>
      </div>
      {{/each}}
    </div>
    <div class="offcanvas-footer">
      <div class="d-grid gap-2 col-12 mx-auto">
        <button class="btn-primary" type="submit">Button</button>
      </div>
    </div>
</div>
</form>