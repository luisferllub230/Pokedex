{{!-- types --}}
{{#if activeDeleteTypes}}
<form action="/admin/delete/{{active}}" method="post">
  <div class="container">
    <div class="card">

      <div class="card-header">
        <div>
          <div class="card-title">
            <h1>{{title}}</h1>
          </div>
        </div>
      </div>

      <div class="card-body row text-center">
        <div class="col-12">
          <h1>Do you want to delete this pokemon Type?</h1>
        </div>
        <div class="col-12">
          <ul>
            <li>id: {{tm.id}}</li>
            <li>Type: {{tm.typeName}}</li>
          </ul>
        </div>

        <input type="hidden" name="id" value="{{tm.id}}" />

      </div>

      <div class="card-header">
        <button type="submit" class="btn btn-success">Delete</button>
        <a href="/admin/typesM" class="btn btn-warning">Cancel</a>
      </div>
    </div>
  </div>
</form>
{{/if}}

