{{!-- pokemons --}}
{{#if activeDeletePokemons}}
<form action="/admin/delete/{{active}}" method="post">
  <div class="container">
    <div class="card">

      <div class="card-header">
        <div>
          <div class="card-title">
            <h1>{{title}}</h1>
          </div>
        </div>
      </div>

      <div class="card-body row">
        <div class="col-12 text-center ms-2">
          <h2>Do you want to delete this pokemon?</h2>
        </div>
        <div class="col-12">
            <div class="card">
              <div class="card-body row">
                <div class="col-12 col-md-6">
                  <div>
                    <img src="{{pm.image}}" alt="{{pm.pokemonName}}" class="img-fluid"  style="max-width: 250px;"/>
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <ul>
                    <li>id: {{pm.id}}</li>
                    <li>Name: {{pm.pokemonName}}</li>
                    <li>Type: {{pm.typesTId}}</li>
                    <li>Region: {{pm.regionsTId}}</li>
                  </ul>
                </div>
              </div>
            </div>
        </div>

        <input type="hidden" name="id" value="{{pm.id}}" />

      </div>

      <div class="card-header">
        <button type="submit" class="btn btn-success">Delete</button>
        <a href="/admin/pokemonsM" class="btn btn-warning">Cancel</a>
      </div>
    </div>
  </div>
</form>
{{/if}}
